<nav class="navbar is-white" role="navigation" aria-label="main navigation">
  <div class="navbar-brand">
    <a class="navbar-item" href="<%= root_path %>">
      <span class="has-text-weight-bold is-size-3">F</span>
      <span class="icon"><i class="far fa-lg fa-heart"></i></span>
      <span class="has-text-weight-bold is-size-3">CUS</span>
    </a>

    <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false"
      data-target="navbarBasicExample">
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
    </a>
  </div>

  <div id="navbarBasicExample" class="navbar-menu">
    <div class="navbar-start">
      <% current_page_style = 'background-color:#fee;font-weight:600' %>
      <% if user_signed_in? %>
        <a class="navbar-item has-icons-left" href="<%= new_emotion_path %>"
          style="<%= current_page_style if yield(:current_page)=='new_emotion' %>">
          <span class="icon">
            <i class="fas fa-hand-holding-heart"></i>
          </span>
          <span>
            キモチと向き合う
          </span>
        </a>
        <a class="navbar-item has-icons-left" href="<%= emotions_path %>"
          style="<%= current_page_style if yield(:current_page)=='emotions' %>">
          <span class="icon">
            <i class="fas fa-book"></i>
          </span>
          <span>
            キモチを懐かしむ
          </span>
        </a>
      <% end %>
      <a class="navbar-item has-icons-left" href="/about"
        style="<%= current_page_style if yield(:current_page)=='about' %>">
        <span class="icon">
          <i class="fas fa-info-circle"></i>
        </span>
        <span>
          このサイトについて
        </span>
      </a>
    </div>

    <div class="navbar-end">
      <div class="navbar-item">
        <div class="buttons">
          <% if user_signed_in? %>
          <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'button is-light' %>
          <% else %>
          <%= link_to '新規登録', new_user_registration_path, class: 'button is-primary' %>
