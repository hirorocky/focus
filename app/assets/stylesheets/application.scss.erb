//$blue: #72d0eb;
$dark-green: #228c7b;
$dark-green-invert: #fff;
$pink: #f30e5c;
$primary: $dark-green;
$primary-invert: $dark-green-invert;
$link: $pink;
$footer-background-color: #272727;
$message-radius: 0px;
$message-header-radius: 0px;
$message-body-radius: 0px;

@import "bulma";
@import "bulma-extensions/bulma-steps/dist/css/bulma-steps.sass";
@import "bulma-extensions/bulma-slider/dist/css/bulma-slider.min.css";
@import '@simonwep/pickr/dist/themes/classic.min.css';

.wrapper{
min-height: 100vh;
position: relative;/*←相対位置*/
padding-bottom: 1.5rem;/*←footerの高さ*/
box-sizing: border-box;/*←全て含めてmin-height:100vhに*/
}

.footer{
padding: 1.5rem 2rem;
}

footer{
width: 100%;
position: absolute;/*←絶対位置*/
bottom: -2rem; /*下に固定*/
}

.home-hero{
background-image: url("<%= asset_path("home.jpg") %>");
background-size: cover;
}

hr{
margin: 0.5rem 0;
}

.navbar-brand{
height: 3.25rem;
}